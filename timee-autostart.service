[Unit]
Description=Timee Application Auto-Start Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=devbox
WorkingDirectory=/home/devbox/project
ExecStart=/home/devbox/project/auto-start.sh
Restart=always
RestartSec=10
KillMode=process
TimeoutStartSec=300
TimeoutStopSec=30

# 环境变量
Environment=NODE_ENV=production
Environment=PORT=8080

# 日志配置
StandardOutput=journal
StandardError=journal
SyslogIdentifier=timee-app

[Install]
WantedBy=multi-user.target 